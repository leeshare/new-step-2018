/* pages/comment/comment.wxss */

.view-list-wrap {
  margin: 0 26rpx;
  margin-right: 0;
}

.view_list_header {
  background: white;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-family: "黑体";
  font-size: 14px;
  color: #666;
  border-bottom: 2rpx solid #e6e6e6;
}

.view-list-item {
  width: 100%;
  min-height: 80rpx;
  padding: 26rpx 0;
  height: auto;
  line-height: 80rpx;
  font-family: "黑体";
  font-size: 14px;
  color: #666;
  border-bottom: 2rpx solid #e6e6e6;
}

.topitem.view-list-item.flexrow {
  align-items: flex-start;
  padding-bottom: 0;
  position: relative;
}

.view_user_wrap.flexcol {
  width: 90rpx;
  height: 90rpx;
  margin-right: 26rpx;
  overflow: hidden;
  border-radius: 99rpx;
  margin-top: 5rpx;
}

.view_user_wrap .img {
  height: 100%;
  width:100%;
  border-radius: 99rpx;
}

.bottomred_line {
  position: relative;
}

.bottomred_line:after {
  content: "";
  position: absolute;
  height: 2rpx;
  background: #ea5b5a;
  left: 0;
  bottom: 0;
  width: 100%;
}

.view_comment_wrap.flexcol {
  position: relative;
  line-height: 44rpx;
  align-items: flex-start;
  border-bottom: 2rpx solid #e6e6e6;
  width: 608rpx;
  box-sizing: border-box;
  
}

.view_user_name {
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  line-height: 40rpx;
}

.view_date {
  color: #999;
  font-size: 10px;
  margin-bottom: 20rpx;
  line-height: normal;
}

.view_comment_word {
  color: #666;
  padding-bottom: 26rpx;
  padding-right:26rpx;
  word-break: break-all;
  line-height: normal;
  text-align: justify;
}

.view_bottom_input {
  padding: 16rpx 26rpx;
  box-sizing: border-box;
  position: fixed;
  justify-content: center;
  left: 0;
  width: 100%;
  bottom: 0;
  border-top: 1px solid #e6e6e6;
}

.view_textarea_wrap {
  width: 85%;
  background: #f5f5f5;
  min-height: 67rpx;
  height: auto;
  border-radius: 8rpx;
  margin-right: 26rpx;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.view_textarea_wrap textarea {
  border: 0;
  padding: 0 0;
  margin-bottom: 0;
  width: 548rpx;
}

.view-praise-wrap {
  position: absolute;
  right: 26rpx;
  top: 30rpx;
  font-size: 14px;
  color: #ccc;
  z-index: 11;
  line-height: normal;
}

.view-praise-wrap .icon-praise {
  font-size: 35rpx;
  color: #ccc;
}

.view-praise-wrap .icon-praise.active {
  color: #ea5b5a;
}
