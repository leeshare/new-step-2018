.view-content-wrap {
  width: 100%;
  height: 100%;
}

.view-content-wrap .view-top-wrap {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  width: 100%;
  min-height: 300rpx;
  overflow: hidden;
  position: relative;
  font-family: "黑体";
  background: white;
}

.view-hot-wrap-top {
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 99999;
  background-color: white;
  width: 100%;
}

.view-content-wrap .view-top-wrap .imge {
  width: 100%;
}

.view-content-wrap .view-shadow-wrap {
  display: flex;
  height: 100%;
  width: 100%;
  position: absolute;
  justify-content: center;
  align-items: center;
  align-content: space-around;
  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.4);
  color: white;
  font-size: 24px;
}

.view-detail-wrap {
  display: flex;
  padding: 20rpx 26rpx;
  background: white;
  line-height: 46rpx;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: space-around;
  font-size: 15px;
  font-family: "黑体";
  border-bottom: 2rpx solid #e6e6e6;
  text-align: justify;
}

.view-hot-wrap {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  font-size: 14px;
  background: white;
  height: 70rpx;
  line-height: 70rpx;
  font-family: "黑体";
}

.view-hot-wrap .tag_wrap {
  width: 100%;
  height: 100%;
  overflow-x: auto;
}

.view-hot-wrap .tag_wrap .keyword {
  display: inline-block;
  padding: 0 26rpx;
  color: #666;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
}




.commodity_attr_box  .view_header {
  padding: 34rpx 0;
  text-align: center;
  font-size: 20px;
  font-family: "黑体";
}

.commodity_attr_box .view_content_wrap {
  padding: 0 44rpx;
  color: #666;
  font-size: 14px;
  font-family: "黑体";
  margin-bottom: 36rpx;
  line-height: 48rpx;
  text-align: justify;
}

.view_aggree_wrap {
  padding: 0 46rpx;
  margin-bottom: 44rpx;
  font-family: "黑体";
}

.button-agree {
  line-height: 58rpx;
  font-size: 14px;
  background: #ea5b5a;
}

.button-agree.large {
  line-height: 76rpx;
}

.view_checbox_wrap {
  margin-left: 44rpx;
  margin-bottom: 18rpx;
  font-size: 14px;
  font-family: "黑体";
  color: #666;
}
 
.flow-row-imagebox {
  margin-left: 3rpx;
  margin-top: 3rpx;
  background-color: #f1f1f1;
  float:left;
  overflow: hidden;
}


